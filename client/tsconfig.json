// client/tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
     "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@constants/*": ["constants/*"],
      "@features/*": ["features/*"],
      "@layouts/*": ["layouts/*"],
      "@modules/*": ["modules/*"],
      "@reducers/*": ["reducers/*"],
      "@routes/*": ["routes/*"],
      "@sections/*": ["sections/*"],
      "@uiTypes/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": [
    "src",
    "vite-env.d.ts"
  ],
}