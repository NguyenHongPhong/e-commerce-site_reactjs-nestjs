{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server (ts-node)",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/server/main.ts"
            ],
            "cwd": "${workspaceFolder}/server",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ]
}